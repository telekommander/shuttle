{
    "name":         "telekommander/shuttle",
    "description":  "Simple Slim Framework 3 skeleton with scaffold tool, migrations,Twig,eloquent & Monolog.",
    "license":      "MIT LICENCE",
    "type":         "project",
    "keywords": ["slim3", "slim-framework", "kickstart", "skeleton","auth","console","cli-tool","migration"],
    "authors": [
        {
            "name":     "Thomas Meschke",
            "email":    "mail@lokalnetz.com",
            "homepage": "http://lokalnetz.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/src"
        }
    },
    "config": {
        "vendor-dir": "vendor"
    },
    "require": {
        "slim/slim":                    "^3.0",
        "slim/twig-view":               "^1.1",
        "slim/flash":                   "^0.1",
        "slim/csrf":                    "^0.5",
        "phpmailer/phpmailer":          "^5.2",
        "monolog/monolog":              "^1.13",
        "illuminate/database":          "^5.1",
        "davedevelopment/phpmig":       "^1.2",
        "alexgarrett/violin":           "^2.2",
        "illuminate/events":            "^5.2",
        "carlosocarvalho/simple-input": "^1.0",
        "maximebf/debugbar":            "^1.11",
        "swiftmailer/swiftmailer":      "^5.4"
    },
    "scripts": {
        "post-update-cmd": [
            "php cli.php migrate"
        ]
    }
}
